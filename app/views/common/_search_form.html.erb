
    <form action="<%= search_path %>" method="get" id="search-form">

    <div class="form-group row no-padding text-center col-md-12">
      <div class="col-md-8">
        <%= text_field_tag :search, params[:search], placeholder: "Enter Tracking Number", autofocus: true, class: 'form-control search-box input-lg' %>
      </div>
      <div class="col-md-4">
        <%= submit_tag "Check Shipment Status", class: "form-control search-box input-lg btn btn-primary", :name => nil %>
        </form>
      </div>
    </div>
